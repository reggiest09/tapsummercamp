<div class="space-100">&nbsp;</div>
   <div class="row">
  <div class="col-md-4 col-md-offset-4">

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
  <h2 class="text-center">Forgot my password?</h2>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %> 
  
  
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-success btn-block" %>
 
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
</div>

<div class="space-100">&nbsp;</div>
